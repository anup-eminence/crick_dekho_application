<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPost1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_image"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageView8" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvText1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="3"
                tools:text="@string/txt"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/ivPost1"
                app:layout_constraintStart_toStartOf="@id/ivPost1"
                app:layout_constraintTop_toBottomOf="@id/ivPost1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppins_regular"
                tools:text="25 minutes ago"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@id/tvText1"
                app:layout_constraintTop_toBottomOf="@id/tvText1" />

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/ivPost1"
                app:layout_constraintStart_toStartOf="@id/ivPost1"
                app:layout_constraintTop_toBottomOf="@id/tvTime1" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPost2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_image"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:shapeAppearanceOverlay="@style/roundedImageView8" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvText2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_regular"
                android:maxLines="3"
                tools:text="@string/txt"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivPost2"
                app:layout_constraintTop_toTopOf="@id/ivPost2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_regular"
                tools:text="25 minutes ago"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/ivPost2"
                app:layout_constraintStart_toStartOf="@id/tvText2"
                app:layout_constraintTop_toBottomOf="@id/tvText2" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/light_grey"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/ivPost1"
                app:layout_constraintStart_toStartOf="@id/ivPost1"
                app:layout_constraintTop_toBottomOf="@id/ivPost2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>